#include<iostream>
using namespace std;
int main()
{
	__int64 a,b;
	cin>>a>>b;
	__int64 ans=0;
	int bn,by;
	int an=1;
	if(a==0)
	{
		ans-=b*b;
		cout<<ans<<endl;
		for(int i=0;i<b;i++)
			cout<<'x';
		cout<<endl;
		return 0;
	}
	else
	{
		__int64 temp=0;
		int i;
		for(i=1;i<=a;i++)
		{
			temp=0;
			temp+=i-1+(a-i+1)*(a-i+1);
			bn=b/(i+1);
			by=b%(i+1);
			temp-=by*(bn+1)*(bn+1)+(i+1-by)*bn*bn;
			if(i==1)
				ans=temp;
			if(temp>ans)
			{
				ans=temp;
				an=i;
			}
		}
	}
	cout<<ans<<endl;
	bn=b/(an+1);
	by=b%(an+1);
	for(int i=0;i<by;i++)
	{
		for(int j=0;j<bn+1;j++)
			cout<<'x';
		cout<<'o';
	}
	for(int i=0;i<an-by;i++)
	{
		for(int j=0;j<bn;j++)
			cout<<'x';
		cout<<'o';
	}
	for(int i=0;i<a-an;i++)
		cout<<'o';
	for(int i=0;i<bn;i++)
		cout<<'x';
	cout<<endl;
	return 0; 
}
