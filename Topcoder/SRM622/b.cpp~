typedef long long ll;
using namespace std;

int find2(int n)
{
	int res=1;
	while(res<n)
		res*=2;
	return res;
}

class BoxesDiv2
{
	public:
		int findSize(vector<int> candyCounts)
		{
			int sum=0;
			for(int i=0;i<candyCounts.size();i++)
				sum+=candyCounts[i];
			int ans=find2(sum);
			return ans;
		}
};
