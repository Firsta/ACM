#include<iostream>
#include<cstdio>
#include<cstring>
#include<cstdlib>
#include<climits>
#include<algorithm>
#include<vector>
#include<stack>
#include<set>
#include<queue>
#include<map>
#include<cmath>
#include<sstream>
#include<string>

typedef long long ll;
typedef unsigned long long ull;
using namespace std;

int a[40005];

int main(){
	int t;
	scanf("%d",&t);
	while(t--){
		int n,m;
		scanf("%d%d",&n,&m);
		int maxx=0,sum=0;
		for(int i=0;i<n;i++){
			scanf("%d",&a[i]);
			if(a[i]>maxx)
				maxx=a[i];
			sum+=a[i];
		}
		ans=sum/m+(sum%m? 1:0);
		if(ans<maxx)
			ans=maxx;
		printf("%d\n",ans);
	}
	return 0;
}
