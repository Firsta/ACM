typedef long long ll;
using namespace std;

int main(){
	double a,b;
	scanf("%lf%lf",&a,&b);
	double ans=(a*a+b*b+2*a*b*sqrt(2))/4;
	printf("%.6lf",ans);
	return 0;
}
